{
  "expo": {
    "name": "DoorIQ",
    "slug": "dooriq-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0a0a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dooriq.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "DoorIQ needs access to your microphone to enable voice conversations with AI training agents.",
        "NSCameraUsageDescription": "DoorIQ needs access to your camera to record training sessions.",
        "NSPhotoLibraryUsageDescription": "DoorIQ needs access to your photo library to upload profile pictures.",
        "UIBackgroundModes": [
          "audio"
        ],
        "NSAppTransportSecurity": {
          "NSAllowsLocalNetworking": true,
          "NSExceptionDomains": {
            "localhost": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSIncludesSubdomains": true
            },
            "127.0.0.1": {
              "NSExceptionAllowsInsecureHTTPLoads": true
            },
            "*.local": {
              "NSExceptionAllowsInsecureHTTPLoads": true
            }
          }
        },
        "NSAllowsArbitraryLoadsInWebContent": false,
        "NSAllowsArbitraryLoads": false
      },
      "associatedDomains": [
        "applinks:dooriq.ai",
        "applinks:*.dooriq.ai"
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0a0a0a"
      },
      "package": "com.dooriq.mobile",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow DoorIQ to access your microphone for voice conversations."
        }
      ]
    ],
    "scheme": "dooriq",
    "extra": {
      "eas": {
        "projectId": "3deca9bc-2727-446f-a603-608f44baa7a1"
      },
      "supabaseUrl": "process.env.EXPO_PUBLIC_SUPABASE_URL",
      "supabaseAnonKey": "process.env.EXPO_PUBLIC_SUPABASE_ANON_KEY",
      "apiBaseUrl": "process.env.EXPO_PUBLIC_API_BASE_URL || 'http://localhost:3000'"
    }
  }
}
