generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  email     String    @unique
  name      String
  password  String
  sessions  Session[]
  createdAt DateTime  @default(now())
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String   @db.ObjectId
  user         User     @relation(fields: [userId], references: [id])
  scenario     String
  conversation Json[]
  rating       Int?
  feedback     Json?
  duration     Int?
  createdAt    DateTime @default(now())
}


